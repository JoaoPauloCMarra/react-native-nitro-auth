# Google OAuth Client IDs
# Get these from https://console.cloud.google.com/apis/credentials

# iOS - Use "iOS" client type
GOOGLE_IOS_CLIENT_ID=YOUR_IOS_CLIENT_ID.apps.googleusercontent.com
# URL scheme is the reversed client ID
GOOGLE_IOS_URL_SCHEME=com.googleusercontent.apps.YOUR_IOS_CLIENT_ID

# Android - Use "Android" client type with package name: com.auth.example
# Get SHA-1 with: keytool -keystore ~/.android/debug.keystore -list -v -storepass android
GOOGLE_ANDROID_CLIENT_ID=YOUR_ANDROID_CLIENT_ID.apps.googleusercontent.com

# Web - Use "Web application" client type
GOOGLE_WEB_CLIENT_ID=YOUR_WEB_CLIENT_ID.apps.googleusercontent.com

# Apple (optional) - for Apple Sign-In on web
# Configure at https://developer.apple.com
APPLE_WEB_CLIENT_ID=com.yourcompany.yourapp.service

# Microsoft / Azure AD (optional) - for Microsoft Sign-In
# Create an app at https://portal.azure.com → Azure Active Directory → App registrations
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_TENANT=common
# MICROSOFT_B2C_DOMAIN=yourtenant.b2clogin.com  # only for Azure B2C
